<div class="container">
  <div class="row">
  		
  		<div class="col-lg-4">
			<div class="profile">
	    	<h1>User info</h1>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-rounded pull-left profile-thumb", fallback: "/images/no_image.jpg"%>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.profile_text %></th>
						</tr>
					</tbody>
				</table>
				<%= link_to edit_user_path(current_user.id), class: " edit_user_#{@user.id} btn btn-default btn-lg btn-block" do %>
					<i class="glyphicon glyphicon-wrench"></i>
				<% end %>

			</div>
			<div class="newbook"></div>
			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
			 <h4>Title</h4>
			 <%= f.text_field :title, class: " book_title col-lg-12" %>
			 <h4>Opinion</h4>
			 <%= f.text_area :body, class: " book_body col-lg-12" %>
			 <%= f.submit "Create Book", class: "btn btn-primary btn-block " %>
	 	  <% end %>

		</div>

				<!-- 自分の投稿一覧 -->
		<div class="col-lg-8">
			<div class="main">
				<div class="index">
					<table class="table">
						<h1>Users</h1>
						<thead>
							<th>image</th>
							<th>name</th>
							<th></th>
						</thead>
						<% @users.each do |user| %>
						<tbody>
							<td>
								<%= attachment_image_tag user, :profile_image, :fill, 30, 30, class: "img-rounded pull-left profile-thumb", fallback: "/images/no_image.jpg", size: '30x30' %>

							</td>
							<td>
								<%= user.name %>
							</td>
							<td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}", method: :get %></td>
						</tbody>
						<% end %>
					</table>
	   			</div>
   			</div>
		</div>
		
	</div>
</div>