

<h1>User info</h1>

<% if @user.errors.any? %>
	<h2 class="error_count"><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
	<div class="edit_user">
		<label for="name">Name</label>
		<%= f.text_field :name, class: "name", id: "name" %>
	</div>
	<div class="edit_user">
		<label for="user_image">Image</label>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
	</div>
	<div class="edit_user">
		<label for="introduction">Introduction</label>
		<%= f.text_area :profile_text, class: "introduction", id: "introduction" %>
	</div>
	<%= f.submit " Update User " %>

<% end %>