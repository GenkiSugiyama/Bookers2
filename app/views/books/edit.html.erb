<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<h1>Editing Book</h1>
			
			<% if @book.errors.any? %>
				<h2 class="error_count"><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  			<div id="error_explanation" class="alert alert-danger">
    			<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
    			</ul>
  			</div>
			<% end %>
			
			<%= form_for(@book) do |f| %>
				<p>Title</p>
				<%= f.text_field :title, class: "book_title col-lg-12" %>
				<p>Opinion</p>
				<%= f.text_area :body, class: "book_body col-lg-12" %>
				<%= f.submit "Update Book", class: "btn btn-primary btn-block active" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}", method: :get %> <span>|</span> <%= link_to "Back", books_path, class: "back", method: :get %>
		</div>
	</div>
</div>