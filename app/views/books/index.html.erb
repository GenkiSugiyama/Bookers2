<div class="container">
	<% if flash[:notice] %>
  	<p class="create-success"><%= flash[:notice] %></p>
	<% end %>
  <div class="row">
  	<% if @book.errors.any? %>
			<h2 class="error_count"><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  		<div id="error_explanation" class="alert alert-danger">
    		<ul>
      		<% @book.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
      		<% end %>
    		</ul>
  		</div>
		<% end %>
  		<div class="col-lg-4">
			<div class="profile">
	    	<h1>User info</h1>
				<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg"%>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.profile_text %></th>
						</tr>
					</tbody>
				</table>

				<%= link_to edit_user_path(current_user.id), class: "edit_user_#{current_user.id} btn btn-default btn-lg btn-block" do %>
					<i class="glyphicon glyphicon-wrench"></i>
				<% end %>
			</div>
			<div class="newbook"></div>
			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
			 <h4>Title</h4>
			 <%= f.text_field :title, class: "book_title col-lg-12" %>
			 <h4>Opinion</h4>
			 <%= f.text_area :body, class: "book_body col-lg-12" %>
			 <%= f.submit "Create Book", class: "btn btn-primary btn-block " %>
	 	  <% end %>

		</div>

				<!-- 投稿一覧 -->
		<div class="col-lg-8">
			<div class="main">
				<div class="index">
					<table class="table">
						<h1>Books</h1>
						<thead>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</thead>
						<% @books.each do |book| %>
						<tbody>
							<td>
								<%= link_to user_path(book.user.id), class: "user_#{book.user.id}" do %>
									<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg", size: '30x30' %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(book.id), class: "book_#{book.id}", method: :get do %>
									<%= book.title %>
								<% end %>
							</td>
							<td><%=book.body%></td>
						</tbody>
						<% end %>
					</table>
	   			</div>
   			</div>
		</div>

	</div>
</div>